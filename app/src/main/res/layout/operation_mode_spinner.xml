<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"      xmlns:tools="http://schemas.android.com/tools"      android:layout_width="160dp"      android:layout_height="30dp"      android:background="@drawable/shape_device_item"      android:gravity="center"      android:padding="@dimen/line_thick"      android:paddingStart="8dp"      android:paddingEnd="8dp"      android:weightSum="4">      <TextView            android:id="@+id/operation_mode_name"            android:layout_width="0dp"            android:layout_height="30dp"            android:layout_weight="3"            android:gravity="center_vertical"            android:textColor="@color/xanh_dam"            android:textSize="13sp"            tools:text="@string/operation_name_rapid_charging" />      <TextView            android:id="@+id/operation_mode_value"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginEnd="5dp"            android:layout_weight="1"            android:background="@drawable/shape_device_item"            android:backgroundTint="#CEC5C5C5"            android:textAlignment="center"            android:textColor="#B6B5B5"            android:textSize="12sp"            tools:text="0x44" /></LinearLayout>